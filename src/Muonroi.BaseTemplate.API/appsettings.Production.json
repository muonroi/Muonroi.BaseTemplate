{
  "DatabaseConfigs": {
    "DbType": "Sqlite",
    "ConnectionStrings": {
      "SqliteConnectionString": "Data Source=app.db",
      "MySqlConnectionString": "",
      "SqlServerConnectionString": "",
      "PostgreSqlConnectionString": ""
    }
  },
  "ApiKey": "",
  "CacheConfigs": {
    "CacheType": "Memory"
  },
  "RedisConfigs": {
    "Enable": false,
    "Host": "localhost",
    "Port": "6379",
    "Password": "",
    "Expire": 30,
    "KeyPrefix": "app",
    "AllMethodsEnableCache": false
  },
  "FeatureFlags": {
    "UseGrpc": false,
    "UseServiceDiscovery": false,
    "UseMessageBus": false,
    "UseBackgroundJobs": false,
    "UseEnsureCreatedFallback": false
  },
  "TokenConfigs": {
    "Issuer": "https://example.com",
    "Audience": "https://example.com",
    "SigningKeys": "",
    "ExpiryMinutes": 30,
    "PublicKey": "",
    "PrivateKey": "",
    "UseRsa": true,
    "EnableCookieAuth": true,
    "CookieName": "AuthToken",
    "CookieSameSite": "Strict"
  },
  "MultiTenantConfigs": {
    "Enabled": false
  },
  "PaginationConfigs": {
    "DefaultPageIndex": 1,
    "DefaultPageSize": 10,
    "MaxPageSize": 100
  },
  "ResourceSetting": {
    "ResourceName": "Resources.ErrorMessages",
    "lang": "vi-VN"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "BaseTemplate"
    },
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    }
  },
  "MAllowDomains": "https://yourdomain.com",
  "GrpcServices": {
    "Services": {}
  },
  "ConsulConfigs": {
    "ServiceName": "BaseTemplate",
    "ConsulAddress": "http://localhost:8500",
    "ServiceAddress": "http://localhost",
    "ServicePort": 5000,
    "ServiceMetadata": {
      "version": "1.0.0",
      "environment": "production"
    }
  },
  "MessageBusConfigs": {
    "BusType": "Kafka",
    "RabbitMq": {
      "Host": "localhost",
      "VirtualHost": "/",
      "Username": "guest",
      "Password": "guest"
    },
    "Kafka": {
      "Host": "localhost:9092",
      "Topic": "app-topic",
      "GroupId": "app-group"
    }
  },
  "BackgroundJobConfigs": {
    "JobType": "Hangfire",
    "ConnectionString": ""
  },
  "KubernetesConfigs": {
    "ClusterType": "K8s",
    "ClusterEndpoint": ""
  },
  "SecretKey": "",
  "EnableEncryption": false
}