{
  "_documentation": {
    "description": "This file contains all configuration options with explanations. Copy relevant sections to appsettings.Development.json or appsettings.Production.json",
    "note": "JSON does not support comments, so use this file as reference only"
  },

  "DatabaseConfigs": {
    "_description": "Database connection configuration",
    "_DbType_options": ["Sqlite", "SqlServer", "MySql", "PostgreSql", "MongoDb"],
    "DbType": "Sqlite",
    "ConnectionStrings": {
      "_Sqlite_example": "Data Source=app.db",
      "SqliteConnectionString": "Data Source=app.db",

      "_MySql_example": "Server=localhost;Database=mydb;User=root;Password=yourpassword;",
      "MySqlConnectionString": "",

      "_SqlServer_example": "Server=.;Database=mydb;Integrated Security=true;TrustServerCertificate=true;",
      "SqlServerConnectionString": "",

      "_PostgreSql_example": "Host=localhost;Database=mydb;Username=postgres;Password=yourpassword;",
      "PostgreSqlConnectionString": "",

      "_MongoDb_example": "mongodb://localhost:27017/mydb",
      "MongoDbConnectionString": ""
    }
  },

  "CacheConfigs": {
    "_description": "Caching strategy configuration",
    "_CacheType_options": ["Memory", "Redis", "MultiLevel"],
    "_Memory": "In-memory caching (default, no external dependencies)",
    "_Redis": "Distributed caching with Redis server",
    "_MultiLevel": "Two-tier caching: Memory (L1) + Redis (L2)",
    "CacheType": "Memory"
  },

  "RedisConfigs": {
    "_description": "Redis server configuration (required when CacheType is Redis or MultiLevel)",
    "Enable": false,
    "Host": "localhost",
    "Port": "6379",
    "_Password_note": "Leave empty if Redis has no authentication",
    "Password": "",
    "_Expire_note": "Cache expiration time in minutes",
    "Expire": 30,
    "_KeyPrefix_note": "Prefix for all cache keys to avoid collisions",
    "KeyPrefix": "app",
    "_AllMethodsEnableCache_note": "Enable caching globally for all API methods",
    "AllMethodsEnableCache": false
  },

  "FeatureFlags": {
    "_description": "Toggle optional features on/off",
    "UseGrpc": false,
    "UseServiceDiscovery": false,
    "UseMessageBus": false,
    "UseBackgroundJobs": false,
    "_UseEnsureCreatedFallback_note": "Auto-create database if migrations fail (useful for dev)",
    "UseEnsureCreatedFallback": true
  },

  "TokenConfigs": {
    "_description": "JWT authentication configuration",
    "Issuer": "https://your-domain.com",
    "Audience": "https://your-domain.com",

    "_SigningKeys_note": "HMAC signing key (min 32 chars). Used when UseRsa=false",
    "SigningKeys": "your-super-secret-signing-key-minimum-32-characters!",

    "_ExpiryMinutes_note": "Access token expiration time in minutes",
    "ExpiryMinutes": 30,

    "_RSA_section": "RSA key pair for token signing (UseRsa=true)",
    "_RSA_generate": "Generate keys: openssl genrsa -out private.pem 2048 && openssl rsa -in private.pem -pubout -out public.pem",

    "_RSA_option1_file": "Option 1: Load from PEM files (recommended for production)",
    "PublicKeyPath": "keys/public.pem",
    "PrivateKeyPath": "keys/private.pem",

    "_RSA_option2_inline": "Option 2: Inline PEM strings (for development/simple setups)",
    "PublicKey": "-----BEGIN PUBLIC KEY-----\nMIIBIjANBgkqhkiG9w0BAQEFAAOCAQ8AMIIBCgKCAQEA...\n-----END PUBLIC KEY-----",
    "PrivateKey": "-----BEGIN RSA PRIVATE KEY-----\nMIIEpAIBAAKCAQEA...\n-----END RSA PRIVATE KEY-----",

    "_RSA_note": "If both file path and inline are set, file path takes priority",

    "UseRsa": false,

    "_Cookie_section": "Cookie-based authentication settings",
    "EnableCookieAuth": true,
    "CookieName": "AuthToken",
    "_CookieSameSite_options": ["Strict", "Lax", "None"],
    "CookieSameSite": "Lax"
  },

  "MultiTenantConfigs": {
    "_description": "Multi-tenancy support",
    "_note": "When enabled, data is isolated by TenantId",
    "Enabled": false
  },

  "TenantConfigs": {
    "_description": "Default tenant configuration",
    "DefaultTenant": "default"
  },

  "PaginationConfigs": {
    "_description": "API pagination defaults",
    "DefaultPageIndex": 1,
    "DefaultPageSize": 10,
    "MaxPageSize": 100
  },

  "ResourceSetting": {
    "_description": "Localization configuration",
    "ResourceName": "Resources.ErrorMessages",
    "_lang_options": ["en-US", "vi-VN"],
    "lang": "vi-VN"
  },

  "Serilog": {
    "_description": "Structured logging configuration",
    "_sinks_available": ["Console", "File", "Elasticsearch"],
    "Using": ["Serilog.Sinks.Console"],
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Properties": {
      "Application": "YourAppName"
    },
    "MinimumLevel": {
      "_Default_options": ["Verbose", "Debug", "Information", "Warning", "Error", "Fatal"],
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    }
  },

  "Serilog_WithElasticsearch_Example": {
    "_description": "Example with Elasticsearch sink (requires Serilog.Sinks.Elasticsearch package)",
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.Elasticsearch"],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Elasticsearch",
        "Args": {
          "NodeUris": "http://localhost:9200",
          "IndexFormat": "logs-myapp-{0:yyyy.MM.dd}",
          "AutoRegisterTemplate": true
        }
      }
    ]
  },

  "MAllowDomains": {
    "_description": "CORS allowed origins (comma-separated)",
    "_value": "https://localhost:5001,http://localhost:4200"
  },

  "GrpcServices": {
    "_description": "gRPC client endpoints (requires UseGrpc=true in FeatureFlags)",
    "Services": {
      "UserService": { "Uri": "https://localhost:5002" },
      "OrderService": { "Uri": "https://localhost:5003" }
    }
  },

  "ConsulConfigs": {
    "_description": "Service discovery with Consul (requires UseServiceDiscovery=true)",
    "ServiceName": "MyService",
    "ConsulAddress": "http://localhost:8500",
    "ServiceAddress": "http://localhost",
    "ServicePort": 5000,
    "ServiceMetadata": {
      "version": "1.0.0",
      "environment": "development"
    }
  },

  "MessageBusConfigs": {
    "_description": "Message broker configuration (requires UseMessageBus=true)",
    "_BusType_options": ["Kafka", "RabbitMq"],
    "BusType": "Kafka",
    "RabbitMq": {
      "Host": "localhost",
      "VirtualHost": "/",
      "Username": "guest",
      "Password": "guest"
    },
    "Kafka": {
      "Host": "localhost:9092",
      "Topic": "app-topic",
      "GroupId": "app-group"
    }
  },

  "BackgroundJobConfigs": {
    "_description": "Background job scheduler (requires UseBackgroundJobs=true)",
    "_JobType_options": ["Hangfire", "Quartz"],
    "JobType": "Hangfire",
    "_ConnectionString_note": "SQL Server connection for job storage",
    "ConnectionString": ""
  },

  "KubernetesConfigs": {
    "_description": "Kubernetes deployment configuration",
    "_ClusterType_options": ["K8s", "K3s"],
    "ClusterType": "K8s",
    "ClusterEndpoint": "https://your-cluster-api"
  },

  "Encryption": {
    "_description": "Configuration value encryption",
    "_SecretKey_note": "32-character key for AES encryption of sensitive values",
    "_SecretKey_generate": "Use any 32-char string or generate: openssl rand -base64 24",
    "SecretKey": "",
    "_EnableEncryption_note": "When true, connection strings and sensitive values must be encrypted",
    "EnableEncryption": false
  },

  "ApiKey": {
    "_description": "API key for external service authentication",
    "_value": ""
  }
}